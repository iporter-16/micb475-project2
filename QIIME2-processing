QIIME2-processing

#!/bin/bash

#### Oct 2, 2023 - SKA ####
# created directory 'colombia' for project
mkdir /data/colombia
cd /data/colombia

# importing and demultiplexing 
qiime tools import \
  --type "SampleData[SequencesWithQuality]" \
  --input-format SingleEndFastqManifestPhred33V2 \
  --input-path /mnt/datasets/project_2/colombia/colombia_manifest.txt \
  --output-path ./demux.qza

# converting qza to qzv format
qiime demux summarize \
  --i-data demux.qza \
  --o-visualization demux.qzv

## local computer terminal, copying file
cd Desktop/micb475-project2
mkdir colombia
cd colombia
scp root@10.19.139.116:/data/colombia/demux.qzv .
##

### truncation length of 225 was chosen 

# created session 'ses1'
screen -S ses1

# denoising and clustering in working directory /data/colombia
# Determine ASVs with DADA2
qiime dada2 denoise-single \
  --i-demultiplexed-seqs demux.qza \
  --p-trim-left 0 \
  --p-trunc-len 225 \
  --o-representative-sequences rep-seqs.qza \
  --o-table table.qza \
  --o-denoising-stats stats.qza

# Visualize DADA2 stats
qiime metadata tabulate \
  --m-input-file stats.qza \
  --o-visualization stats.qzv

# Visualize ASVs stats
qiime feature-table summarize \
  --i-table table.qza \
  --o-visualization table.qzv \
  --m-sample-metadata-file /mnt/datasets/project_2/colombia/colombia_metadata.txt
  
qiime feature-table tabulate-seqs \
  --i-data rep-seqs.qza \
  --o-visualization rep-seqs.qzv

## local computer, copying files
cd Desktop/micb475-project2/colombia
scp root@10.19.139.116:/data/colombia/stats.qzv .
scp root@10.19.139.116:/data/colombia/table.qzv .
scp root@10.19.139.116:/data/colombia/rep-seqs.qzv .
